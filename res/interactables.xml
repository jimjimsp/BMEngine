<?xml version="1.0" encoding="UTF-8"?>

<interactables>

    <interactable>

        <name>Template Interactable</name>

        <inter_id>int_ex_1</inter_id>

        <states>
            <state id="default">state_1</state>
            <state>state_2</state>
            <state>state_3</state>
        </states>

        <spawn_position>
            <x>0</x>
            <y>0</y>
        </spawn_position>

        <animations>
            <animation id="state_1">
                <image>FILEPATH</image>
            </animation>
            <animation id="state_2">
                <image>FILEPATH</image>
            </animation>
            <animation id="state_3">
                <image>FILEPATH</image>
            </animation>
        </animations>

        <descriptions>
            <description id="state_1">This interactable is in state 1.</description>
            <description id="state_2">This interactable is in state 2.</description>
            <description id="state_3">This interactable is in state 3.</description>
        </descriptions>

        <on_interact>

            <interaction>
                <reqired_item>none</reqired_item>
                <required_state>none</required_state>
                <verb>print description id=current_state</verb>
            </interaction>

            <interaction>
                <reqired_item>example_item_1</reqired_item>
                <required_state>state_1</required_state>
                <verb>print This interactable in now in state 2.</verb>
                <verb>get example_item_2</verb>
                <verb>set_state state_2</verb>
            </interaction>

            <interaction>
                <reqired_item>example_item_2</reqired_item>
                <required_state>state_2</required_state>
                <verb>print This interactable in now in state 3.</verb>
                <verb>set_state state_3</verb>
            </interaction>

        </on_interact>

    </interactable>



    <interactable>

        <name>Cupboard</name>

        <inter_id>int_cont_1</inter_id>

        <states>
            <state id="default">closed</state>
            <state>opened</state>
            <state>emptied</state>
        </states>

        <spawn_position>
            <x>0</x>
            <y>0</y>
        </spawn_position>

        <animations>
            <animation id="closed">
                <image>FILEPATH</image>
            </animation>
            <animation id="opened">
                <image>FILEPATH</image>
            </animation>
            <animation id="emptied">
                <image>FILEPATH</image>
            </animation>
        </animations>

        <descriptions>
            <description id="closed">The cupboard is closed.</description>
            <description id="opened">There is a key inside.</description>
            <description id="emptied">The cupboard is empty.</description>
        </descriptions>

        <on_interact>

            <interaction>
                <reqired_item>none</reqired_item>
                <required_state>closed</required_state>
                <verb>print "I've opened the cupboard"</verb>
                <verb>set_state opened</verb>
            </interaction>

            <interaction>
                <reqired_item>none</reqired_item>
                <required_state>opened</required_state>
                <verb>print "I've picked up the key"</verb>
                <verb>get key_id</verb>
                <verd>set_state emptied</verd>
            </interaction>

        </on_interact>

    </interactable>


